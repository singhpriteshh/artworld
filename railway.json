{
    "services": [
      {
        "name": "backend",
        "path": "server",
        "build": {
          "builder": "Nixpacks",
          "buildCommand": "npm install",
          "startCommand": "npm start"
        }
      },
      {
        "name": "frontend",
        "path": "client",
        "build": {
          "builder": "Nixpacks",
          "buildCommand": "npm install && npm run build",
          "startCommand": "npx serve -s dist"
        }
      }
    ]
  }
  